{
  "info": {
    "name": "Blockchain Certs MVP",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login ADMIN",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {"raw": "http://localhost:3000/api/auth/login", "protocol":"http","host":["localhost"],"port":"3000","path":["api","auth","login"]},
        "body": {"mode":"raw","raw":"{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Pass@123\"\n}"}
      }
    },
    {
      "name": "Upload (ADMIN)",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:3000/api/admin/certificates/upload", "protocol":"http","host":["localhost"],"port":"3000","path":["api","admin","certificates","upload"]},
        "body": {
          "mode": "formdata",
          "formdata": [
            {"key":"meta","value":"{\"kind\":\"transcript\",\"studentRef\":\"sample\"}","type":"text"},
            {"key":"file","type":"file","src":"demo/transcript.pdf"}
          ]
        }
      }
    },
    {
      "name": "Login VERIFIER",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {"raw": "http://localhost:3000/api/auth/login", "protocol":"http","host":["localhost"],"port":"3000","path":["api","auth","login"]},
        "body": {"mode":"raw","raw":"{\n  \"email\": \"verifier@example.com\",\n  \"password\": \"Pass@123\"\n}"}
      }
    },
    {
      "name": "Verify (VERIFIER)",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:3000/api/verifications/verify", "protocol":"http","host":["localhost"],"port":"3000","path":["api","verifications","verify"]},
        "body": {"mode":"raw","raw":"{\n  \"docId\": \"<paste-docId>\"\n}"}
      }
    }
  ]
}
